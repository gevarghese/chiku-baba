<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 <%= bg_color %> rounded-md flex items-center justify-center">
        <svg class="w-5 h-5 <%= icon_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <%= icon_path.html_safe %>
        </svg>
      </div>
    </div>
    <div class="ml-5 w-0 flex-1">
      <dl>
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate"><%= label %></dt>
        <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= count %></dd>
      </dl>
    </div>
  </div>
</div>