<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-black-600 dark:text-black-400 mt-2 text-2xl font-extrabold">Create New Blog Post</h1>
    <p class="text-black-600 dark:text-black-400 mt-2">Share your thoughts with the world</p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <%= render 'form', blog: @blog %>
  </div>

  <div class="mt-4">
    <%= link_to 'Back to Blogs', blogs_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" %>
  </div>
</div>