<header class="bg-white dark:bg-gray-800 shadow-lg transition-colors duration-200" data-controller="mobile-menu">
  <div class="w-full px-4 sm:px-6 lg:px-8 mx-auto">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= render 'shared/app_name' %>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <%= render 'shared/navigation' %>
      </nav>

      <!-- Desktop Right Side -->
      <div class="hidden md:flex items-center space-x-4">
        <!-- Theme Toggle -->
        <%= render 'shared/dark_mode_button' %>

        <!-- User Actions (desktop only) -->
        <%= render 'shared/user_info_header' %>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center space-x-2">
        <!-- Mobile Theme Toggle -->
        <%= render 'shared/dark_mode_button' %>

        <!-- Hamburger button -->
        <button 
          data-action="click->mobile-menu#toggle" 
          class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
        >
          <svg data-mobile-menu-target="closedIcon" class="w-6 h-6 block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg data-mobile-menu-target="openIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
<div 
  data-mobile-menu-target="menu" 
  class="md:hidden hidden fixed inset-y-0 right-0 w-64 max-w-full bg-white dark:bg-gray-800 shadow-lg transform transition-transform duration-300 ease-in-out translate-x-full opacity-0 z-50"
>
  <div class="h-full overflow-y-auto border-l border-gray-200 dark:border-gray-700 px-4 py-6">
    <!-- Mobile Navigation Links -->
    <%= render 'shared/mobile_navigation' %>

    <!-- Mobile User Actions -->
    <div class="mt-6 space-y-2">
      <% if user_signed_in? %>
        <!-- Collapsible user dropdown -->
        <div data-controller="dropdown">
          <button 
            data-action="click->dropdown#toggle"
            class="w-full flex items-center justify-between px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 font-medium hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
          >
            <span>Hello, <%= current_user.first_name %></span>
            <svg class="w-4 h-4 transform transition-transform duration-200" 
                 data-dropdown-target="icon" 
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <div 
            data-dropdown-target="menu"
            class="hidden opacity-0 scale-95 mt-2 space-y-2 pl-4"
          >
            <%= link_to edit_user_registration_path, class: "block w-full text-left px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
              Edit Profile
            <% end %>

            <% if current_user.admin? %>
              <%= link_to admin_users_path, class: "block w-full text-left px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
                Admin Dashboard
              <% end %>
            <% end %>

            <%= link_to destroy_user_session_path, 
                data: { turbo_method: :delete },
                class: "block w-full text-left px-3 py-2 rounded-lg text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
              Sign Out
            <% end %>
          </div>
        </div>
      <% else %>
        <%= link_to new_user_session_path, class: "block w-full bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg font-medium text-center transition-colors duration-200" do %>
          Sign In
        <% end %>

        <%= link_to new_user_registration_path, class: "block w-full border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 px-3 py-2 rounded-lg font-medium text-center transition-colors duration-200" do %>
          Sign Up
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</header>
