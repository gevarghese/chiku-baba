<% if resource.errors.any? %>
<div id="error_explanation" data-turbo-cache="false" class="bg-gray-900 text-red-500 font-bold border-l-4 border-red-500 rounded-r-lg shadow-lg p-6 mb-8 backdrop-blur-sm">
<!-- Header with icon -->
<div class="flex items-start space-x-3 mb-4">
<div class="flex-shrink-0">
<div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center shadow-md">
<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.966-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
</svg></div></div>
<div class="flex-1">
<h2 class="text-red-600 font-bold text-lg mb-1">
Oops! Let's fix a few things</h2><p class="text-red-500 font-bold text-sm opacity-90"><%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
</p></div>
</div>
<!-- Error list -->
<ul class="space-y-3">
<% resource.errors.full_messages.each do |message| %>
  <li class="flex items-start space-x-2 bg-gray-800 text-red-500 font-bold backdrop-blur-sm rounded-lg p-3 shadow-sm border border-red-600">
  <svg class="w-4 h-4 text-red-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
  </svg>
  <span class="flex-1"><%= message %>
  </span></li><% end %>
  </ul><!-- Footer note -->
  <div class="mt-4 pt-3 border-t border-red-700/50">
  <p class="text-red-500 font-bold text-xs opacity-75">Please review the highlighted fields below</p>
  </div></div>
  <% end %>