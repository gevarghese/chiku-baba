<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-16">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-4 animate-fade-in">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-600">Our Blog</span>
    </h1>
    <p class="max-w-xl mx-auto text-xl text-gray-500 dark:text-gray-400 animate-slide-up">
      Discover the latest insights, informations, and updates from our team.
    </p>
  </div>

  <% if @featured_blogs.any? %>
    <section class="mb-16 animate-fade-in">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Posts</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% @featured_blogs.each do |blog| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:scale-105">
            <% if blog.featured_image.attached? %>
              <%= image_tag blog.featured_image.variant(resize_to_fill: [600, 400]), class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="w-full h-48 bg-gradient-to-r from-blue-400 to-purple-500"></div>
            <% end %>
            <div class="p-6">
              <div class="flex items-center mb-2">
                <span class="text-xs font-semibold px-2 py-1 rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                  <%= blog.category&.name || "Uncategorized" %>
                </span>
                <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">
                  <%= blog.published_at.strftime("%b %d, %Y") %>
                </span>
              </div>
              <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
                <%= link_to blog.title, blog_path(blog), class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors" %>
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
                <%= strip_tags(blog.content.to_plain_text).truncate(120) %>
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <% if blog.user.avatar.attached? %>
                    <%= image_tag blog.user.avatar.variant(resize_to_fill: [40, 40]), class: "w-8 h-8 rounded-full mr-2" %>
                  <% else %>
                    <div class="w-8 h-8 rounded-full bg-gray-300 dark:bg-gray-600 mr-2 flex items-center justify-center">
                      <span class="text-xs font-bold"><%= blog.user.first_name[0] %><%= blog.user.last_name[0] %></span>
                    </div>
                  <% end %>
                  <span class="text-sm text-gray-600 dark:text-gray-400"><%= blog.user.full_name %></span>
                </div>
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= blog.reading_time %> min read</span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <section class="animate-fade-in delay-300">
 <!-- First row: Title and New Blog button -->
<div class="flex justify-between items-center mb-4">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Latest Posts</h2>
  <% if user_signed_in? %>
