<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= @category.name %></h1>
  
    <% if @blogs.present? && @blogs.any? %>
    <%= paginate @blogs %>
    <div class="space-y-6">
      <% @blogs.each do |blog| %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= blog.title %></h2>
          <p class="text-gray-600"><%= truncate(blog.content, length: 150) %></p>
          <%= link_to "Read more", blog, class: "text-blue-600 hover:text-blue-800 mt-3 inline-block" %>
        </div>
      <% end %>
    </div>
    
    <%# Add pagination for blogs %>
    <div class="mt-8">
      <%= paginate @blogs %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <p class="text-gray-500">No blogs found in this category.</p>
    </div>
  <% end %>
  
  <%= link_to "Back to blogs", blogs_path, class: "mt-6 inline-block text-blue-600 hover:text-blue-800" %>
</div>