<!-- app/views/shared/_user_info_header.html.erb -->
<div class="hidden md:flex items-center space-x-2">
  <% if user_signed_in? %>
    <!-- User dropdown menu -->
    <div class="relative" data-controller="dropdown">
      <button 
        data-action="click->dropdown#toggle"
        class="flex items-center space-x-1 text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors duration-200 px-2 py-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700"
      >
        <span class="hidden sm:inline text-sm"><%= current_user.first_name %></span>
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <!-- Dropdown menu -->
      <div 
        data-dropdown-target="menu"
        class="hidden absolute right-0 mt-1 w-40 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50 text-sm"
      >
        <%= link_to edit_user_registration_path, class: "block px-3 py-1.5 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
          Edit Profile
        <% end %>

        <% if current_user.admin? %>
          <%= link_to admin_users_path, class: "block px-3 py-1.5 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
            Admin Dashboard
          <% end %>
        <% end %>

        <div class="border-t border-gray-200 dark:border-gray-600 my-1"></div>

        <%= link_to destroy_user_session_path, 
            data: { turbo_method: :delete },
            class: "block px-3 py-1.5 text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
          Sign Out
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Sign In and Sign Up buttons for guests -->
    <%= link_to new_user_session_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 text-sm rounded-md font-medium transition-colors duration-200 hidden sm:inline-block" do %>
      Sign In
    <% end %>

    <%= link_to new_user_registration_path, class: "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 px-3 py-1.5 text-sm rounded-md font-medium transition-colors duration-200 hidden sm:inline-block" do %>
      Sign Up
    <% end %>
  <% end %>
</div>
