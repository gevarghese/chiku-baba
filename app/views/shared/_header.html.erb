<header class="bg-white dark:bg-gray-800 shadow-lg transition-colors duration-200" data-controller="mobile-menu">
  <div class="w-full px-4 sm:px-6 lg:px-8 mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= render 'shared/app_name' %>
      </div>
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <%= render 'shared/navigation' %>
      </nav>

      <!-- Desktop Right Side -->
      <div class="hidden md:flex items-center space-x-4">
        <!-- Theme Toggle -->
         <%= render 'shared/dark_mode_button' %>

        <!-- User Actions -->
        <div class="flex items-center space-x-3">
          <%= link_to "#", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200" do %>
            Sign In
          <% end %>
          <%= link_to "#", class: "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 px-4 py-2 rounded-lg font-medium transition-colors duration-200" do %>
            Sign Up
          <% end %>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center space-x-2">
        <!-- Mobile Theme Toggle -->
          <%= render 'shared/dark_mode_button' %>
        
        <!-- Hamburger button -->
        <button 
          data-action="click->mobile-menu#toggle" 
          class="p-2 rounded-lg text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
        >
          <svg data-mobile-menu-target="closedIcon" class="w-6 h-6 block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg data-mobile-menu-target="openIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div 
      data-mobile-menu-target="menu" 
      class="md:hidden hidden border-t border-gray-200 dark:border-gray-700"
    >
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white dark:bg-gray-800">
        <%= render 'shared/mobile_navigation' %>
        
        <!-- Mobile User Actions -->
        <div class="pt-4 pb-2 border-t border-gray-200 dark:border-gray-700 space-y-2">
          <%= link_to "#", class: "block w-full bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg font-medium text-center transition-colors duration-200" do %>
            Sign In
          <% end %>
          <%= link_to "#", class: "block w-full border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 px-3 py-2 rounded-lg font-medium text-center transition-colors duration-200" do %>
            Sign Up
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>