<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Blog Post</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Update your blog post</p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <%= render 'form', blog: @blog %>
  </div>

  <div class="mt-4 flex space-x-4">
    <%= link_to 'View Post', blog_path(@blog), class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" %>
    <%= link_to 'Back to Blogs', blogs_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300" %>
  </div>
</div>