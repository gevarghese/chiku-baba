<%= link_to root_path, class: "flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-lg font-medium transition-colors duration-200 #{'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20' if current_page?(root_path)}" do %>
  <span>🏠</span>
  <span>Home</span>
<% end %>

<!-- Products dropdown controlled by Stimulus -->
<div class="relative" data-controller="dropdown">
  <button 
    data-action="click->dropdown#toggle"
    class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 rounded-lg font-medium transition-colors duration-200"
  >
    <span>📦</span>
    <span>Products</span>
    <svg class="w-4 h-4 ml-1 transition-transform duration-200" 
         data-dropdown-target="icon" 
         fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div 
    data-dropdown-target="menu"
    class="hidden absolute left-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50 opacity-0 scale-95"
  >
    <%= link_to "#", class: "block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-t-lg" do %>
      <span>📦</span> 
      <span>All Products</span>
    <% end %>
    
    <!-- Blog dropdown within Products -->
    <div class="relative" data-controller="dropdown">
      <button 
        data-action="click->dropdown#toggle"
        class="flex items-center justify-between w-full px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"
      >
        <div class="flex items-center">
          <span>📝</span>
          <span class="ml-1">Blog</span>
        </div>
        <svg class="w-3 h-3 transition-transform duration-200" 
             data-dropdown-target="icon" 
             fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>

      <div 
        data-dropdown-target="menu"
        class="hidden absolute left-full top-0 ml-1 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50 opacity-0 scale-95"
      >
        <%= link_to blogs_path, class: "block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 #{'bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400' if current_page?(blogs_path)}" do %>
          <span>📰</span>
          <span class="ml-1">Published Blogs</span>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to my_blogs_blogs_path, class: "block px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 #{'bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400' if current_page?(my_blogs_blogs_path)}" do %>
            <span>📋</span>
            <span class="ml-1">My Blogs</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

