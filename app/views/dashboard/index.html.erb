<!-- app/views/dashboard/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Hero Section -->
  <div class="text-center mb-16">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-4 animate-fade-in">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-600">Dashboard</span>
    </h1>
    <p class="max-w-xl mx-auto text-xl text-gray-500 dark:text-gray-400 animate-slide-up">
      Welcome to your personal dashboard. Manage your content and track your activity.
    </p>
  </div>

  <!-- Google Ads Section -->
  <div class="mb-12">
    <%= render 'shared/google_adds' %>
  </div>

  <!-- Dashboard Content -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Add your dashboard widgets here -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
        Quick Stats
      </h3>
      <p class="text-gray-600 dark:text-gray-300">
        Your activity overview and statistics
      </p>
    </div>
    
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
        Recent Activity
      </h3>
      <p class="text-gray-600 dark:text-gray-300">
        Latest updates and actions
      </p>
    </div>
    
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
        Quick Actions
      </h3>
      <p class="text-gray-600 dark:text-gray-300">
        Common tasks and shortcuts
      </p>
    </div>
  </div>
</div>
