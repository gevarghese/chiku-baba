<style>
/* Add to your Tailwind CSS or stylesheet */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
.scrollbar-hide::-webkit-scrollbar {
  display: none;
}
</style>
<%= form_with(model: blog, class: "space-y-6", html: { multipart: true }) do |form| %>
  <% if blog.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">There <%= blog.errors.count == 1 ? 'is' : 'are' %> <%= pluralize(blog.errors.count, "error") %> with this blog:</h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc pl-5 space-y-1">
              <% blog.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" %>
    </div>

    <div>
      <%= form.label :category_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" } %>
    </div>
  </div>

  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= form.rich_text_area :content, placeholder: "Write your blog post here..." %>
  </div>

  <div>
    <%= form.label :featured_image, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <div class="mt-1 flex items-center">
      <% if blog.featured_image.attached? %>
        <div class="mr-3">
          <%= image_tag blog.featured_image.variant(resize_to_limit: [100, 100]), class: "h-20 w-20 object-cover rounded" %>
        </div>
      <% end %>
      <span class="inline-block h-12 w-12 overflow-hidden bg-gray-100 dark:bg-gray-700 rounded">
        <svg class="h-full w-full text-gray-300 dark:text-gray-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </span>
      <div class="ml-5">
        <%= form.file_field :featured_image, class: "text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 dark:file:bg-blue-900 dark:file:text-blue-200 hover:file:bg-blue-100 dark:hover:file:bg-blue-800" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.select :status, 
    Blog.statuses.keys.map { |s| [s.humanize, s] }, 
    { selected: form.object.status }, 
    { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" } %>
    </div>

    <div>
      <%= form.label :published_at, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.datetime_field :published_at, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.check_box :featured, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded" %>
    <%= form.label :featured, class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-blue-700 dark:hover:bg-blue-800 transition-colors" %>
  </div>
<% end %>