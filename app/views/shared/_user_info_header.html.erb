<!-- app/views/layouts/_navigation.html.erb -->
<nav class="bg-white dark:bg-gray-800 py-2">
  <div class="w-full px-4 sm:px-6 lg:px-8 mx-auto flex items-center justify-between">
    <!-- Mobile menu button (hamburger) -->
    <button class="md:hidden p-1.5 rounded-md text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" data-action="click->mobile-menu#toggle">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Desktop User Actions -->
    <div class="hidden md:flex items-center space-x-2">
      <% if user_signed_in? %>
        <!-- User dropdown menu -->
        <div class="relative" data-controller="dropdown">
          <button 
            data-action="click->dropdown#toggle"
            class="flex items-center space-x-1 text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors duration-200 px-2 py-1.5 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700"
          >
            <span class="hidden sm:inline text-sm"><%= current_user.first_name %></span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>

          <!-- Dropdown menu -->
          <div 
            data-dropdown-target="menu"
            class="hidden absolute right-0 mt-1 w-40 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50 text-sm"
          >
            <%= link_to edit_user_registration_path, class: "block px-3 py-1.5 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
              Edit Profile
            <% end %>

            <% if current_user.admin? %>
              <%= link_to admin_users_path, class: "block px-3 py-1.5 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
                Admin Dashboard
              <% end %>
            <% end %>

            <div class="border-t border-gray-200 dark:border-gray-600 my-1"></div>

            <%= link_to destroy_user_session_path, 
                data: { turbo_method: :delete },
                class: "block px-3 py-1.5 text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200" do %>
              Sign Out
            <% end %>
          </div>
        </div>

      <% else %>
        <!-- Sign In and Sign Up buttons for guests -->
        <%= link_to new_user_session_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 text-sm rounded-md font-medium transition-colors duration-200 hidden sm:inline-block" do %>
          Sign In
        <% end %>

        <%= link_to new_user_registration_path, class: "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 px-3 py-1.5 text-sm rounded-md font-medium transition-colors duration-200 hidden sm:inline-block" do %>
          Sign Up
        <% end %>
      <% end %>
    </div>

    <!-- Mobile menu (hidden by default) -->
    <div class="md:hidden hidden absolute top-full left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 shadow-lg py-2 px-4" data-mobile-menu-target="menu">
      <% if user_signed_in? %>
        <div class="py-2 border-b border-gray-200 dark:border-gray-600 mb-2">
          <p class="text-sm font-medium text-gray-900 dark:text-white">Hello, <%= current_user.full_name %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400"><%= current_user.email %></p>
        </div>
        
        <%= link_to edit_user_registration_path, class: "block py-2 px-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md mb-1" do %>
          Edit Profile
        <% end %>

        <% if current_user.admin? %>
          <%= link_to admin_users_path, class: "block py-2 px-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md mb-1" do %>
            Admin Dashboard
          <% end %>
        <% end %>

        <%= link_to destroy_user_session_path, 
            data: { turbo_method: :delete },
            class: "block py-2 px-3 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md" do %>
          Sign Out
        <% end %>

      <% else %>
        <%= link_to new_user_session_path, class: "block py-2 px-3 text-sm bg-blue-600 text-white rounded-md font-medium mb-2 text-center" do %>
          Sign In
        <% end %>

        <%= link_to new_user_registration_path, class: "block py-2 px-3 text-sm border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-md font-medium text-center" do %>
          Sign Up
        <% end %>
      <% end %>
    </div>
  </div>
</nav>