<footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 transition-colors duration-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex flex-col lg:flex-row items-center justify-between space-y-4 lg:space-y-0">

      <!-- Brand -->
      <div class="flex items-center space-x-2">
        <%= render 'shared/app_name' %>
          (<span class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Made with</span>
            <span class="text-red-500 text-lg">♥</span>)
      </div>

      <!-- Support Links -->
      <div class="relative" data-controller="dropdown">
        <!-- Button (always visible on mobile, hidden on lg) -->
        <button 
          type="button"
          class="lg:hidden flex items-center space-x-1 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 text-sm"
          data-action="click->dropdown#toggle"
        >
          <span>Support</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <!-- Inline list on desktop -->
        <div class="hidden lg:flex space-x-4 text-sm">
          <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Help Center</a>
          <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Privacy Policy</a>
          <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Terms</a>
          <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">Cookies</a>
          <a href="#" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">FAQ</a>
        </div>

        <!-- Dropdown on mobile -->
        <div 
          data-dropdown-target="menu"
          class="absolute left-0 hidden lg:hidden w-40 bg-white dark:bg-gray-700 shadow-lg rounded-lg py-2"
        >
          <a href="#" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Help Center</a>
          <a href="#" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Privacy Policy</a>
          <a href="#" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Terms</a>
          <a href="#" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">Cookies</a>
          <a href="#" class="block px-4 py-2 text-sm text-gray-600 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600">FAQ</a>
        </div>
      </div>

      <!-- Newsletter Inline -->
      <form class="flex items-center space-x-2"
            data-controller="newsletter"
            data-action="submit->newsletter#subscribe">
        <input 
          type="email" 
          placeholder="Email (for news-letter)"
          class="w-36 sm:w-48 px-3 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
          required
        >
        <button 
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1.5 px-4 rounded-lg transition-colors"
        >
          Subscribe
        </button>
      </form>

